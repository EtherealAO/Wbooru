<Page
    x:Class="Wbooru.UI.Pages.SettingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Wbooru.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wbooru.UI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settingui="clr-namespace:Wbooru.UI.Controls.SettingUI"
    xmlns:settingui1="clr-namespace:Wbooru.UI.ValueConverters.SettingUI"
    Name="MainSettingPage"
    Title="SettingPanel"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Page.Resources>
        <settingui1:AssemblyTypeDisplayConverter x:Key="AssemblyTypeDisplayConverter" />
        <Style TargetType="{x:Type CheckBox}">
            <Style.Resources>
                <Style TargetType="{x:Type Path}">
                    <Setter Property="FlowDirection" Value="LeftToRight" />
                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="FlowDirection" Value="LeftToRight" />
                </Style>
            </Style.Resources>
            <Setter Property="FlowDirection" Value="RightToLeft" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
    </Page.Resources>

    <Grid Name="MainPanel" Background="{StaticResource ContentBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Popup
            Name="ComfirmPopup"
            Placement="MousePoint"
            PopupAnimation="Fade"
            StaysOpen="False">
            <Border Background="{StaticResource ContentBackgroundColor_LowTransparent}" BorderBrush="White">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*">
                        </RowDefinition>
                        <RowDefinition Height="Auto">
                        </RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition>
                        </ColumnDefinition>
                        <ColumnDefinition>
                        </ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.ColumnSpan="2"
                        Padding="30,10,30,10"
                        HorizontalAlignment="Center"
                        FontSize="14">
                        选项保存成功!但有一些选项变更需要重启软件才生效,是否立即重启？
                    </TextBlock>

                    <Button
                        Name="NotRestartComfirmButton"
                        Grid.Row="1"
                        Margin="20,20,20,0"
                        Padding="20,10,20,10"
                        Background="Transparent"
                        BorderBrush="White"
                        Click="NotRestartComfirmButton_Click">
                        稍后再说
                    </Button>
                    <Button
                        Name="RestartComfirmButton"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="20,20,20,0"
                        Padding="20,10,20,10"
                        Background="Transparent"
                        BorderBrush="White"
                        Click="RestartComfirmButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="LightGray" Opacity="0.1">立即重启</TextBlock>
                            <TextBlock>立即关闭</TextBlock>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>
        </Popup>

        <StackPanel Orientation="Horizontal">
            <controls:MenuButton
                x:Name="ReturnButton"
                Button.Click="MenuButton_Click"
                ContentMargin="5,0,15,0"
                Icon=""
                Text="返回" />
        </StackPanel>

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="150" />
            </Grid.ColumnDefinitions>

            <ScrollViewer Margin="15">
                <StackPanel>
                    <TextBlock FontSize="26" Text="{Binding CurrentSettingName}">
                    </TextBlock>
                    <StackPanel Name="SettingListPanel">
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <TreeView
                Name="SettingView"
                Grid.Column="1"
                Background="Transparent"
                BorderBrush="Transparent"
                ItemsSource="{Binding SupportSettingWrappers}">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="True" />
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding SupportSettings}">
                        <TextBlock Text="{Binding ReferenceAssembly, Converter={StaticResource AssemblyTypeDisplayConverter}}" />
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    DataContext="{Binding}"
                                    MouseDown="TextBlock_MouseDown"
                                    Text="{Binding Converter={StaticResource AssemblyTypeDisplayConverter}}" />
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Grid>
    </Grid>
</Page>
