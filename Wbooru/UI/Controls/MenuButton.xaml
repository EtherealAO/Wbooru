<UserControl
    x:Class="Wbooru.UI.Controls.MenuButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wbooru.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="50"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <Button Name="MainButton" HorizontalContentAlignment="Left">
        <Button.Resources>
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontSize" Value="15" />
                <Setter Property="FontFamily" Value="Segoe UI Symbol" />
            </Style>
        </Button.Resources>
        <StackPanel
            Margin="{Binding ContentMargin}"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label
                Margin="0,0,10,0"
                VerticalContentAlignment="Center"
                Content="{Binding Icon}"
                FontFamily="Segoe UI Symbol"
                FontSize="{Binding IconSize}">
            </Label>
            <!--
                Margin="40,2,10,2"
            -->
            <Label
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                Content="{Binding Text}"
                FontFamily="{Binding FontFamily, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}"
                FontSize="{Binding TextSize}">
            </Label>
        </StackPanel>
    </Button>
</UserControl>
